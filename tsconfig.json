{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "lib": ["es2017", "es7", "es6", "dom"],
    "outDir": "dist",
    "baseUrl": "./",
    "strict": true,
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist", "./vitest.config.m*"]
}
